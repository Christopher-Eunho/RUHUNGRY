doctype html
html(lang='en')
    head
        title R U HUNGRY
        style
            include ./app.css
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bulma@0.9.3/css/bulma.min.css")
        link(rel="preconnect", href="https://fonts.googleapis.com")
        link(rel="preconnect", href="https://fonts.gstatic.com", crossorigin)
        link(rel="stylesheet", href="https://fonts.googleapis.com/css2?family=Inter:wght@100;200;300;400;500;600;700&family=Merriweather:wght@300;400;900&family=PT+Serif&family=Playfair+Display:wght@500&family=Shippori+Antique+B1&display=swap")

    body
        header
            div(class="container mt-5" id="searchContainer")
                form(method ="POST")
                    div(class="field")
                        label(class="label title is-1 has-text-centered", id="mainHeading") I'm Feeling Hungry
                        label(class="label subtitle is-8 has-text-centered mb-5", id="subHeading") Generate a random restaurant near you.
                        div(class="control")
                            input(class="input is-rounded", type="text", id="locationQuery", name="location", placeholder="Location")               
                        div(class="control mt-3")
                            input(class="input is-rounded", type="text", id="categoryQuery", name="terms", placeholder="Category")                
                        div(class="control mt-3")
                            input(class="input is-rounded" type="text" id="radiusQuery" name="radius" placeholder="Distance (km)")
                    input(class="button is-danger is-rounded", type="submit", value="Search")
                if showResult
                    div(class="container my-5", id="queryBox") 
                        div(class="box", id="queriedContainer")
                            div(class="card")
                                div(class="card-image")
                                figure(class="image is-5by3")
                                    img(src=`${image}`, alt="Placeholder image")
                                div(class="card-content")
                                    div(class="media-content")
                                        p(class="title is-4", id="displayTitleRatingPricing") #{name} · #{starRating} · #{price}
                                        a(href=`${restaurantURL}`)
                                            p Google Map 
                                        p(class="subtitle is-6", id="displayAddress") #{address}
                                    
                            
 


